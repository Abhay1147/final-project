{% extends "base.jinja" %}

{% block title %}Store - Habit Tracker{% endblock %}

{% block content %}
<div class="container">
    <h1><i class="fas fa-store"></i> Habit Store</h1>
    <p class="text-muted">Spend your coins on awesome items!</p>
    
    <div class="alert alert-info">
        <i class="fas fa-coins"></i> Your Balance: <strong>{{ user_coins }} coins</strong>
    </div>
    
    <div class="row">
        {% if items %}
            {% for item in items %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        {% if item.image_url %}
                            <img src="{{ item.image_url }}" class="card-img-top" alt="{{ item.name }}">
                        {% else %}
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-image fa-3x text-muted"></i>
                            </div>
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ item.name }}</h5>
                            <p class="card-text">{{ item.description }}</p>
                        </div>
                        <div class="card-footer bg-light">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-coins"></i> {{ item.price }}
                                </span>
                                {% if user_coins >= item.price %}
                                    <button class="btn btn-sm btn-success">Buy</button>
                                {% else %}
                                    <button class="btn btn-sm btn-secondary" disabled>Not enough coins</button>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">No items available yet.</div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
